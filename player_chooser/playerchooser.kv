
<ChooserWidget>:
    base_font_size: 0.4*self.height
    canvas:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size
    CountdownLabel:
        id: countdown_label
        base_font_size: root.base_font_size
        font_size: root.base_font_size
        text: str(root.countdown_value) if root.countdown_value >= 0 else ''

    # Button:
    #     size_hint: 0.5, 0.05
    #     text: 'countdown'
    #     on_release: root.start_countdown()
            
<TouchPosition>:
    pos_hint: {}
    size_hint: None, None
    canvas:
        Color:
            rgba: self.colour + [self.opacity]
        Ellipse:
            pos: self.pos[0] - self.radius, self.pos[1] - self.radius
            size: 2*self.radius, 2*self.radius

<CountdownLabel>:
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    color: 0.15, 0.15, 0.15, 1

    canvas.before:
        PushMatrix:
        Scale:
            origin: self.x + 0.5*self.width, self.y + 0.5*self.height
            x: self.scale
            y: self.scale

    canvas.after:
        PopMatrix:
